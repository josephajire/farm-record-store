<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ajireapp.farmrecordstore">

    <application
        android:allowBackup="true"
        android:icon="@drawable/frs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/frs_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmRecordStore">

        <activity android:name=".SearchResultActivity"
            android:label="@string/label_search_screen"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/label_settings_screen"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditRecordActivity"
            android:label="@string/label_record_details"/>
        <activity
            android:name=".RecordActivity"
            android:label="@string/label_record_details"/>

        <activity
            android:name=".EntryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>